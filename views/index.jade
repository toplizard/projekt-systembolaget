html(ng-app="myApp")
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        base(href='/index')
        title Projekt Systembolaget
        link(rel='stylesheet', href='/css/app.css')
        script(src='js/lib/angular/angular.js')
        script(src='js/app.js')
        script(src='js/services.js')
        script(src='js/controllers.js')
        script(src='js/filters.js')
        script(src='js/directives.js')
    block body
        div(ng-controller='AppCtrl')
            h2 Hello
            div
                button(ng-click='updateDb()')
                    | Update Database
            div
                input(ng-model='searchArticle')
                button(ng-click='getArticleById(searchArticle)')
                    | Get article
            div
                button(ng-click='getArticles()')
                    | Get articles
            ul.menu
                li
                    a(href='/view1') view1
                li
                    a(href='view2') view2

        div(ng-view)